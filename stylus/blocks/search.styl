.search
  display block
  max-width 210px
  

  &__field
    position relative
    
    size(100%, 32px)
  

  &__input
    display block
    
    width 100%
    height 32px
    
    padding 0 34px 0 10px
    
    font-size 13px
    
    outline 0
    border-radius 3px
    border 1px solid #e1e1e1
    background #fff
    
    &:focus
      border-color darken(#e1e1e1, 10%)
      
      & + .search__icon
        opacity .6      

  &__icon
    position absolute
    top 8px
    right 11px
    
    display block
    size(16px)
    
    hidetext()
    
    border 0
    opacity .15
    transition opacity .1s ease
    
    background transparent
    background-size cover
    background-image url('data:image/svg+xml;base64,')