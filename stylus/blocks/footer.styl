.footer
  height $footer-height
  margin-top $footer-height * -1px
  
  background #f5f5f5
  border-top 1px solid #e5e5e5 
  

  &__inner
    container($site-width)
    height 100%
    display flex
    align-items center
    justify-content space-between
    
    +below($desktop-cutoff)
      padding 0 20px
  

  &__left
    margin-right 20px
    
    +above($desktop-cutoff)
      max-width 50%
    

  &__copyright
    font-weight bold
    font-size 14px
    
    color #444
    
    +below($mobile-cutoff)
      font-size 12px